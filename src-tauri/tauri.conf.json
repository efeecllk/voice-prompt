{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voice Prompt",
  "version": "0.1.0",
  "identifier": "com.voiceprompt.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Voice Prompt",
        "label": "main",
        "width": 360,
        "height": 480,
        "resizable": false,
        "decorations": true,
        "visible": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist",
      "infoPlist": "./Info.plist"
    }
  }
}
